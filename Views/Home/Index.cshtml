<script>
    let currentSlide = 0;

    function updateSlidePosition() {
        const carousel = document.querySelector('.carousel .row');
        const itemWidth = document.querySelector('.major-container').offsetWidth;
        carousel.style.transform = `translateX(-${currentSlide * itemWidth}px)`;
    }

    function nextSlide() {
        const totalItems = document.querySelectorAll('.major-container').length;
        const itemsPerView = 4;
        if (currentSlide < totalItems - itemsPerView) {
            currentSlide++;
        } else {
            currentSlide = 0; // Loop back to the start
        }
        updateSlidePosition();
    }

    function prevSlide() {
        const totalItems = document.querySelectorAll('.major-container').length;
        const itemsPerView = 4;
        if (currentSlide > 0) {
            currentSlide--;
        } else {
            currentSlide = totalItems - itemsPerView; // Loop back to the end
        }
        updateSlidePosition();
    }

    // Initialize the carousel position
    updateSlidePosition();

</script>