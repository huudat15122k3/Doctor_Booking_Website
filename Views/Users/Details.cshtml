@model Doctor_Booking.Models.User

@{
    ViewBag.Title = "Details";
    string majorname = Model.Major.Name.ToString();
}

<style>
    .header {
        padding: 30px 0;
        display: flex;
        justify-content: center;
        background: radial-gradient(circle,#2171af85,#0094ff);
        color: #fff
    }
        .header a {
            text-decoration: none;
            color: #fff
        }

        .header .header-container {
            width: 90%;
            font-size: 24px;
        }

    .body {
        display: flex;
        justify-content: center;
    }

    .doctor-details {
        display: flex;
        justify-content: center;
    }

        .doctor-details .container {
            padding: 36px 0;
            width: 90%;
        }

    .doctor-details .doctor-avatar img {
        width :100%;
        height:100%;
        object-fit:cover;
    }
    .doctor-details .doctor-avatar  {
        width:100%;
        border:5px solid #b1c2d0;
    }

        .doctor-details .doctor-sumary {
            background: #f3f3f3;
        }


     .info-list {

        padding-top: 8px;
    }

         .info-list ul {
            padding: 0px;
            font-size:20px;

        }

             .info-list ul li {
                padding: 4px 0;
            }

                 .info-list ul li i {
                    padding: 4px;
                }

      

    .info-list h3{
        text-align:center;
    }

    .info-list a{
        text-decoration:none;
        color:#fff
    }

            .info-list  .btn-booking {
                padding: 8px 4px;
                margin-top: auto;
                background: #2171af;
                color: #fff;
                border-radius: 3px;
                text-align: center;
                width:100%
            }
</style>
<body>
    <div class="header">
        <div class="header-container">
            <a href="@Url.Action("Index","Home")">Home</a>
            »
            <span>@Model.Fullname</span>

        </div>
    </div>

    <div class="doctor-details">
        <div class="container">
            <div class="row ">
                <div class="col-md-3">
                    <div class="doctor-infor">
                        <div class="doctor-avatar">
                            <img src="~/Content/Image/user-avatar/@Model.ImagePath" width="100%" height="100%" />
                        </div>
                        <div class="doctor-sumary">
                            <h3>@Model.Fullname</h3>
                            <div class="info-list">
                                <ul>
                                    <li>
                                        <i class="fa fa-stethoscope"></i>
                                        <span>@majorname</span>
                                    </li>
                                    <li>
                                        <i class="fa fa-bookmark"></i>
                                        <span>Update...</span>
                                    </li>
                                    <li>
                                        <i class="fa fa-envelope"></i>
                                        <span>@Model.Email</span>
                                    </li>
                                    <li>
                                        <i class="fa fa-phone"></i>
                                        <span>@Model.Phone</span>
                                    </li>

                                </ul>
                                <div class="btn-booking">

                                    <a href="">Booking an appointment</a>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div>
                        <p>
                            Associate Professor, PhD, Doctor Đoàn Thị Hồng Hoa<br />

                            Former Deputy Head of the Ear - Neurotology Department at the National Otorhinolaryngology Hospital.<br />

                            Currently, Associate Professor, PhD, Đoàn Thị Hồng Hoa, has a schedule for consultations and treatment at An Việt General Hospital.<br />

                            Dr. Hoa has many years of experience working at the National Otorhinolaryngology Hospital, where she has treated numerous patients with ear and neurotological conditions, both adults and children. For patients with otitis externa, choosing Dr. Hoa for consultation is highly appropriate.<br />

                            Dr. Hoa will provide medical examinations and treatments at the clinic. In severe cases with complications, she will advise and guide patients for hospital admission for treatment.<br />

                            Dr. Hoa specializes in:

                           <ul>
                               <li>
                                   Ear surgery                      
                               </li>
                               <li>Tympanoplasty</li>
                               <li> Endoscopic sinus surgery</li>
                               <li>Aerosol therapy</li>
                               <li> Nasal septum deviation surgery</li>
                               <li>Adenoidectomy</li>
                               <li>Tonsillectomy</li>
                               <li>  Sinus surgery</li>
                               <li>Tympanic membrane repair</li>
                               <li>Preauricular sinus</li>
                               <li>Vocal cord polyp removal</li>
                               <li>Nasal septum surgery</li>
                               <li>Tongue-tie release</li>
                               <li>Nasal polyps</li>
                               <li>Snoring treatment</li>
                           </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>